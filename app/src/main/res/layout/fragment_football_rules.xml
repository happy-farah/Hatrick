<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/myDarkGreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="7dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginBottom="7dp"

            >
    <TextView
        android:id="@+id/FRtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Football Rules"
        android:textColor="@color/myGreen"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="115dp" />
    <TextView
        android:id="@+id/rule1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_1_frule"
        android:textColor="@color/textGray"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="inherit"
        android:layout_marginTop="30dp"
        />
        <TextView
        android:id="@+id/rule2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_2_frule"
        android:textColor="@color/textGray"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="inherit"
        />
        <TextView
        android:id="@+id/rule3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_3_frule"
        android:textColor="@color/textGray"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="inherit"
        />
        <TextView
        android:id="@+id/rule4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_4_frule"
        android:textColor="@color/textGray"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="inherit"
        />
        <TextView
        android:id="@+id/rule5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_5_frule"
        android:textColor="@color/textGray"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="inherit"
        /><TextView
        android:id="@+id/rule6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_6_frule"
        android:textColor="@color/textGray"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="inherit"
        />

</LinearLayout>
</LinearLayout>
</ScrollView>
