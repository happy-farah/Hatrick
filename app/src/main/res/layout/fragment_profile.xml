<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personalInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="Profile"
            android:textColor="@color/myDarkGreen"
            android:textSize="24sp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/nameLab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="Name"
            android:textColor="@color/myDarkGreen"
            android:textSize="16sp"
            android:textStyle="bold"
             />

        <EditText
            android:id="@+id/firstNameBox"
            android:layout_width="152dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textColor="@color/textGray"
             />

        <EditText
            android:id="@+id/lastNameBox"
            android:layout_width="152dp"
            android:layout_height="55dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="-55dp"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textColor="@color/textGray"
           />

        <TextView
            android:id="@+id/BDLab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Date"
            android:textColor="@color/myDarkGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
             />

        <EditText
            android:id="@+id/dayBox"
            android:layout_width="66dp"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="DD"
            android:inputType="number"
            android:textColor="@color/textGray"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/dash1"
            android:layout_width="13dp"
            android:layout_height="41dp"
            android:text="/"
            android:textSize="34sp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-45dp"
             />

        <EditText
            android:id="@+id/monBox"
            android:layout_width="66dp"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="MM"
            android:inputType="number"
            android:textColor="@color/textGray"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="-55dp"
             />

        <TextView
            android:id="@+id/dash2"
            android:layout_width="13dp"
            android:layout_height="41dp"
            android:text="/"
            android:textSize="34sp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-45dp"
             />

        <EditText
            android:id="@+id/yearBox"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="YYYY"
            android:inputType="number"
            android:textColor="@color/textGray"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-55dp"
             />

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="309dp"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/myDarkGreen"
                android:textSize="16sp"
                android:textStyle="bold"
                 />


            <RadioButton
                android:id="@+id/maleRadio"
                android:layout_width="87dp"
                android:layout_height="55dp"
                android:text="Male"
                android:textColor="@color/textGray" />

            <RadioButton
                android:id="@+id/femaleRadio"
                android:layout_width="105dp"
                android:layout_height="55dp"
                android:text="Female"
                android:textColor="@color/textGray" />

        </RadioGroup>

        <TextView
            android:id="@+id/phoneLab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@color/myDarkGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            />


        <EditText
            android:id="@+id/phoneBox"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="07 xxxx xxxx"
            android:inputType="textEmailAddress"
            android:textColor="@color/textGray"
            android:layout_marginLeft="10dp"
             />

        <TextView
            android:id="@+id/emailLab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="@color/myDarkGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            />


        <EditText
            android:id="@+id/emailBox"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="example@example.com"
            android:inputType="textEmailAddress"
            android:textColor="@color/textGray"
            android:layout_marginLeft="10dp"
             />


        <Button
            android:id="@+id/editProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textGray"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="16sp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-22dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/myDarkGreen"
            android:textStyle="bold"
            />




    </LinearLayout>

    </ScrollView>



</FrameLayout>