<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Football">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fieldCard"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:outlineSpotShadowColor="@color/orange"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fieldImage"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:contentDescription="@string/todo1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/basketball_img" />

                    <TextView
                        android:id="@+id/fieldLab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="13dp"
                        android:text="Field Name"
                        android:textColor="@color/orange"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fieldLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:text="Location"
                        android:textColor="@color/textGray"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/fieldRateImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="220dp"
                        android:layout_marginTop="-70dp"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_baseline_star_rate_24" />

                    <TextView
                        android:id="@+id/fieldRateLab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="230dp"
                        android:layout_marginBottom="10dp"
                        android:text="Rate"
                        android:textColor="@color/orange"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fieldCard2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:outlineSpotShadowColor="@color/orange"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fieldImage2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:contentDescription="@string/todo1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/basketball_img" />

                    <TextView
                        android:id="@+id/fieldLab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="13dp"
                        android:text="Field Name"
                        android:textColor="@color/orange"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fieldLocation2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:text="Location"
                        android:textColor="@color/textGray"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/fieldRateImg2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="220dp"
                        android:layout_marginTop="-70dp"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_baseline_star_rate_24" />

                    <TextView
                        android:id="@+id/fieldRateLab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="230dp"
                        android:layout_marginBottom="10dp"
                        android:text="Rate"
                        android:textColor="@color/orange"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>