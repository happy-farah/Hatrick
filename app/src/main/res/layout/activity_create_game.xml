<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGame"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/createGame"
        android:layout_width="577dp"
        android:layout_height="1131dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/myDarkGreen"
        android:outlineSpotShadowColor="@color/myDarkGreen"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_green"
            android:layout_margin="15dp"
            >



            <Switch
                android:id="@+id/switch1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Public Game"
                android:textSize="30sp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="50dp"
                android:textColor="@color/myDarkGreen"

                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>